{
    "name": "appointment-searcher-service",
    "version": "1.0.0",
    "description": "Appointment searching tool",
    "main": "index.js",
    "scripts": {
        "test": "node ./node_modules/jest/bin/jest.js",
        "eslint": "eslint -c .eslintrc.json --ext .ts .",
        "build": "node ./node_modules/typescript/bin/tsc -p .",
        "dockerbuild": "node ./scripts/dockerBuild.js --docker-build",
        "preversion": "npm test",
        "version": "node ./scripts/dockerBuild.js --docker-build",
        "postversion": "node ./scripts/dockerBuild.js --docker-push",
        "postinstall": "node ./scripts/setupDevEnvironment.js"
    },
    "author": "sseiber",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:sseiber/Appointment-Searcher-Service.git"
    },
    "dependencies": {
        "@hapi/boom": "^9.1.1",
        "@hapi/hapi": "^20.1.0",
        "@hapi/inert": "^6.0.3",
        "@hapi/wreck": "^17.1.0",
        "chalk": "^4.1.0",
        "cheerio": "^1.0.0-rc.5",
        "commander": "^7.0.0",
        "fs-extra": "^9.1.0",
        "nconf": "^0.11.2",
        "query-string": "^6.13.8",
        "spryly": "^2.1.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.6",
        "@types/hapi__hapi": "^20.0.5",
        "@types/hapi__inert": "^5.2.2",
        "@types/jest": "^26.0.20",
        "@types/nconf": "0.10.0",
        "@types/node": "^14.14.22",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^31.6.0",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.0",
        "typescript": "^4.1.3"
    },
    "jest": {
        "rootDir": "./src/",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "transform": {
            ".tsx?": "ts-jest"
        },
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./__mocks__/fileMock.js"
        }
    }
}
